/* miniprogram/pages/index/index.wxss */
page{
    width: 100%;
    height: 100%;
}
.temwrap{
    width: 100%;
    height: 100%;
    /* display: flex;
    justify-content: center;
    align-items: center; */
    position: relative;
}
.bg{
    position: absolute;
    top:0;
    left:0;
    right: 0;
    bottom: 0;
}
.bgmimg{
    width: 100%;
    height: 100%;
    filter: blur(1px) contrast(60%) grayscale(20%);
    animation: pulse 2s linear infinite;
}
.topinfo{
  width: 400rpx;
  height: 400rpx;
  border-radius: 50%;
  position: absolute;
  right: 5%;
  bottom: 5%;
}   
.zhi{
    width: 100%;
    height: 100%;
    border-radius: 50%; 
    animation: rotateinfinet 6s linear infinite;
    filter:opacity(80%);
}
.myvideo{
    position: fixed;
    top: 10rpx;
    width: 100%;
    text-align: center;
}
.changebg{
    position: fixed;
    right: 10rpx;
    bottom: 10rpx;
    padding: 10rpx;
    color: #ffffff;
    font-size: 30rpx;
}
@keyframes rotateinfinet {
    0%{
      transform: rotate(0deg)
    }
    25%{
        transform: rotate(90deg);
    }
    50%{
        transform: rotate(180deg);
    }  
    75%{
        transform: rotate(270deg);
    }  
    100%{
        transform: rotate(360deg)
    }
}

@keyframes pulse {
    from {
        filter: hue-rotate(0);
    }
    to {
        filter: hue-rotate(360deg);
    }
}